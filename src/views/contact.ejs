<%- include('includes/head') %> <%- include('includes/nav') %>

<container class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-4">
      <h1 class="text-center">Contacts</h1>
      <p class="text-center lead">Create or update a contact below</p>

      <%- include('includes/messages'); %> 
      <% if(contact._id) { %>
        <form class="contact" action="/contact/edit/<%= contact._id %>" method="POST">
        <% } else { %>
          <form class="contact"action="/contact/register" method="POST">
          <% } %>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <span class="genErr" hidden></span>
        <div class="form-group">
          <label>First Name</label>
          <input
            value="<%= contact.firstName %>"
            type="text"
            class="form-control"
            name="firstName"
          />
        </div>
        <div class="form-group">
          <label>Last Name</label>
          <input
            value="<%= contact.lastName %>"
            type="text"
            class="form-control"
            name="lastName"
          />
        </div>
        <div class="form-group">
          <label>Email</label>
          <input
            value="<%= contact.email %>"
            type="email"
            class="form-control"
            name="email"
          />
        </div>
        <div class="form-group">
          <label>Phone nr.</label>
          <input
            value="<%= contact.phoneNr %>"
            type="text"
            class="form-control"
            name="phoneNr"
          />
        </div>
        <button type="submit" class="btn btn-primary">Save Details</button>
      </form>
    </div>

    <div class="col-lg-2"></div>
  </div>
</container>

<%- include('includes/footer') %>
